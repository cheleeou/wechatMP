/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
}

.input-section {
  width: 100%;
  padding: 20rpx;
}

.text-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.image-section {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.result-image {
  width: 100%;
  max-width: 600rpx;
  border-radius: 8rpx;
}

.loading-icon {
  width: 20px;
  height: 20px;
  border: 2px solid #ffffff;
  border-radius: 50%;
  border-top-color: transparent;
  animation: rotate 0.8s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.response-section {
  margin-top: 20px;
  padding: 16px;
  background: #f8f8f8;
  border-radius: 8px;
}

.response-text {
  word-break: break-all;
  line-height: 1.6;
}
